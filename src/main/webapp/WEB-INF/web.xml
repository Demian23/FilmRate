<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
    <display-name>FilmRate</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>by.wtj.filmrate.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Authorization</servlet-name>
        <jsp-file>/WEB-INF/jsp/authorization.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authorization</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <jsp-file>/WEB-INF/jsp/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserPage</servlet-name>
        <jsp-file>/WEB-INF/jsp/user.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserPage</servlet-name>
        <url-pattern>/userPage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FilmDetails</servlet-name>
        <jsp-file>/WEB-INF/jsp/film.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>FilmDetails</servlet-name>
        <url-pattern>/film</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BannedUserPage</servlet-name>
        <jsp-file>/WEB-INF/jsp/user_ban.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>BannedUserPage</servlet-name>
        <url-pattern>/userBan</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminPage</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPage</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminUsers</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin_users.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminUsers</servlet-name>
        <url-pattern>/adminUsers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FilmNew</servlet-name>
        <jsp-file>/WEB-INF/jsp/film_new.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>FilmNew</servlet-name>
        <url-pattern>/filmNew</url-pattern>
    </servlet-mapping>
</web-app>